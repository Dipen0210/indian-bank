<%-include("./partials/header") %> 
<%-include("./partials/navbar") %>

<div class="home-container container mt-4 animate__animated animate__fadeIn animate__slow ">
  <% if (customers.length>0) { %>
  <div class="row">
    <h1 class=" body-text text-center">Our Customers</h1>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead class=" thead-dark text-center fs-6">
          <tr>
            <th>No.</th>
            <th>Name</th>
            <th>State</th>
            <th>Email ID</th>
            <th>Current Balance <span><i class="fas fa-rupee-sign"></i></span></th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody class="text-center fs-6">
          <% customers.forEach((customer,index) => { %>
          <tr>
            <td class="fw-bold"><%=index + 1%></td>
            <td><%=customer.name%></td>
            <td><%=customer.address%></td>
            <td><%=customer.email%></td>
            <td>
              
              <%=(customer.currentBal).toLocaleString('en-IN')%>
            </td>
            <td>
              <a type="button" class="btn btn-sm btn-outline-dark " href="/customers/<%=(customer.accNo).toString()%>"> View </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <% }else{ %>
  <div class="row">
    <h1 class="text-center">No customers</h1>
  </div>
  <%}%>
</div>

<%-include("./partials/footer") %>
