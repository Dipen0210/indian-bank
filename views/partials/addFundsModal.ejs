<form action="/customers/<%=customerData.accNo%>/addFunds" method="post">
  <div class="modal fade" id="creditAmount" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title">Credit Funds</h3>
        </div>

        <div class="modal-body">
          <div class="form-group">
            <label for="amount" class="fw-bold">Enter Valid Amount :</label>
            <input type="number" name="amount" class="form-control mt-3" placeholder="INR"required/>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
          <div class="form-group">
            <input type="submit" name="submit" class="btn btn-md btn-success" value="Credit Funds"/>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
