<form action="/customers/<%=customerData.accNo%>/transferFunds" method="post">
  <div class="modal fade" id="transferAmount" data-bs-backdrop="static" data-bs-keyboard="false"tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title"> Transfer Funds to :</h3>
        </div>

        <div class="modal-body">
          <div class="form-group">
            <label for="amount" class="fw-bold">Receiver Account :</label>
            <select class="form-select mt-2" name="transferTo">
              <%if(allCustomers.length>0){%>
              <% allCustomers.forEach(customer => { %> 
              <option value="<%=customer.accNo%>"><%=customer.name%></option>
              <% }) %>
              <%}%>
            </select>
          </div>
          <div class="form-group">
            <label for="amount" class="fw-bold mt-3">Enter Valid Amount :</label>
            <input type="number" name="amount" class="form-control mt-2" placeholder="INR" required/>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-primary " data-bs-dismiss="modal">Cancel</button>
          <div class="form-group">
            <input type="submit" name="submit" class="btn btn-md btn-danger" value="Transfer"/>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
